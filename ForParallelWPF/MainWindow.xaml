<Window x:Class="ForParallelWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForParallelWPF"
        mc:Ignorable="d"
        Title="Parallel" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">
            Напиши во мне
        </Label>
        <TextBox Grid.Row="1" Grid.Column="0"
                 Margin="10"/>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Name="cmdCancel" Grid.Row="0"
                    Grid.Column="0" Margin="10" Click="cmdCancel_Click">
                Отмена
            </Button>
            <Button Name="cmdProcess" Grid.Row="0"
                    Grid.Column="2" Margin="10" Click="cmdProcess_Click">
                Преобразовать
            </Button>
        </Grid>
    </Grid>
</Window>
